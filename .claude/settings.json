{
	"permissions": {
		"allow": [],
		"deny": [],
		"defaultMode": "bypassPermissions"
	},
	"includeCoAuthoredBy": false,
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "$CLAUDE_PROJECT_DIR/.claude/hooks/log-command.sh"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Write|Edit|MultiEdit",
				"hooks": [
					{
						"type": "command",
						"command": "$CLAUDE_PROJECT_DIR/.claude/hooks/lint-check.sh"
					},
					{
						"type": "command",
						"command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-filename.sh"
					}
				]
			},
			{
				"matcher": "Write",
				"hooks": [
					{
						"type": "command",
						"command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-new-file.sh"
					}
				]
			}
		]
	}
}
